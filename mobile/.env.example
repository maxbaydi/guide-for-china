# EXPO_PUBLIC_API_BASE_URL=http://localhost:4000/api/v1
# EXPO_PUBLIC_GRAPHQL_URL=http://localhost:4002/graphql

# For local network testing (replace with your local IP):
EXPO_PUBLIC_API_BASE_URL=http://192.168.31.88:4000/api/v1
EXPO_PUBLIC_GRAPHQL_URL=http://192.168.31.88:4002/graphql

